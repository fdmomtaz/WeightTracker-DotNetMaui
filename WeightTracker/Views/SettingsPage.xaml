<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeightTracker.Views.SettingsPage"
             xmlns:sv="clr-namespace:AiForms.Settings;assembly=SettingsView"
             Title="Settings">
    <sv:SettingsView HasUnevenRows="true">
        
        <sv:Section Title="Your Information">
            <sv:LabelCell Title="Units" ValueText="" />
            <sv:LabelCell Title="Height" ValueText="" />
            <sv:LabelCell Title="Gender" ValueText="" />
        </sv:Section>
        
        <sv:Section Title="Your Data">
            <sv:ButtonCell Title="Delete All Data" TitleAlignment="Start" Tapped="DeleteBtn_Clicked" />
            <sv:ButtonCell Title="Export All Data" TitleAlignment="Start" Tapped="ExportBtn_Clicked" />
        </sv:Section>
    </sv:SettingsView>
</ContentPage>